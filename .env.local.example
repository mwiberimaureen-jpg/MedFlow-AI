# =====================================================
# MEDFLOW AI - COMPLETE ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!
# =====================================================

# =====================================================
# APPLICATION SETTINGS
# =====================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MedFlow AI

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# INTASEND PAYMENT GATEWAY
# =====================================================
# Get from: https://dashboard.intasend.com/account/api-keys

# Test mode keys (use these for development)
INTASEND_PUBLISHABLE_KEY=ISPubKey_test_xxxxxxxx
INTASEND_SECRET_KEY=ISSecKey_test_xxxxxxxx
INTASEND_WEBHOOK_SECRET=your-webhook-secret-here
INTASEND_ENVIRONMENT=sandbox

# Production keys (uncomment for production)
# INTASEND_PUBLISHABLE_KEY=ISPubKey_live_xxxxxxxx
# INTASEND_SECRET_KEY=ISSecKey_live_xxxxxxxx
# INTASEND_ENVIRONMENT=production

# =====================================================
# MODAL API (AI Analysis Endpoint)
# =====================================================
# After deploying Modal, you'll get the endpoint URL

MEDICAL_ANALYSIS_API_URL=https://your-workspace--medical-analysis-api-fastapi-app.modal.run
MEDICAL_API_KEY=your-secure-random-api-key-32-chars-minimum

# =====================================================
# OPENROUTER AI API
# =====================================================
# Get from: https://openrouter.ai/keys
# This is used by the Modal endpoint

OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =====================================================
# SUBSCRIPTION PRICING (in KES - Kenyan Shillings)
# =====================================================
NEXT_PUBLIC_MONTHLY_PRICE=2000
NEXT_PUBLIC_CURRENCY=KES
NEXT_PUBLIC_TRIAL_DAYS=7

# =====================================================
# FEATURE FLAGS
# =====================================================
FEATURE_FILE_UPLOADS=true
FEATURE_ANALYSIS_EXPORT=true
FEATURE_PATIENT_SEARCH=true

# =====================================================
# SECURITY
# =====================================================
# Generate a random 32+ character string for JWT secret
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this

# =====================================================
# ANALYTICS (OPTIONAL)
# =====================================================
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
